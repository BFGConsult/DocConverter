
requireProgram () {
    echo -n "Check if program $1 exists: "
    which -s $1 && echo "pass" || echo "fail"
}

requireFileExists () {
    echo -n "Check if file '$1' exists: "
    [ -f "$1" ] && echo "pass" || echo "fail"
}

requireVariable () {
    echo -n "Check if variable is set '$1': "
    [ -n "${!1}" ] && echo "pass" || echo "fail"
}
